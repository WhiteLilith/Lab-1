using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication9
{
    class Program
    {
        static void Main(string[] args)
        {
            double a, b, c, q;
            Console.Write("Введите число a: ");
            a = double.Parse(Console.ReadLine());
            Console.Write("Введите число b: ");
            b = double.Parse(Console.ReadLine());
            q = a * a;
            a = q;
            q = b * b;
            b = q;
            c = a + b;
            Console.Write("Сумма квадратов этих чисел равна ");
            Console.WriteLine(c);
            if (a > b)
            {
                c = a - b;
                Console.Write("Разность квадратов этих чисел равна ");
                Console.WriteLine(c);
            }
            else
            {
                c = b - a;
                Console.Write("Разность квадратов этих чисел равна ");
                Console.WriteLine(c);
            }
            c = a * b;
            Console.Write("Произведение квадратов этих чисел равно ");
            Console.WriteLine(c);
            if (a > b)
            {
                c = a / b;
                Console.Write("Частное квадратов этих чисел равно ");
                Console.WriteLine(c);
            }
            else
            {
                c = b / a;
                Console.Write("Частное квадратов этих чисел равно ");
                Console.WriteLine(c);
            }
            Console.ReadKey();
        }
    }
}
